<launch>
    <arg name="launch_prefix" default="" /> <!-- set to value="gdbserver localhost:10000" for remote debugging -->
    <arg name="node_namespace" default="apriltag_ros_continuous_node" />
    <arg name="camera_frame" default="camera_color_optical_frame" />

    <arg name="throttle_rate" default="5" />

    <arg name="image_topic" default="/camera/color/image_raw" />
    <arg name="info_topic" default="/camera/color/camera_info" />

    <arg name="image_throttle_topic" default="$(arg image_topic)_throttle" />
    <arg name="info_throttle_topic" default="$(arg info_topic)_throttle" />


    <!-- <node type="throttle" name="apriltag_image_topic_throttle" pkg="topic_tools" required="true" output="log"
        args="messages $(arg image_topic) $(arg throttle_rate) $(arg image_throttle_topic)"/>
    <node type="throttle" name="apriltag_info_topic_throttle" pkg="topic_tools" required="true" output="log"
        args="messages $(arg info_topic) $(arg throttle_rate) $(arg info_throttle_topic)"/> -->
    
    <!-- Set parameters -->
    <rosparam command="load" file="$(find db_config)/config/apriltag/settings.yaml" ns="$(arg node_namespace)" />
    <rosparam command="load" file="$(find db_config)/config/apriltag/tags.yaml" ns="$(arg node_namespace)" />

    <node pkg="apriltag_ros" type="apriltag_ros_continuous_node" name="$(arg node_namespace)" clear_params="true" output="log" launch-prefix="$(arg launch_prefix)" >
        <!-- Remap topics from those used in code to those on the ROS network -->
        <remap from="image_rect" to="$(arg image_topic)" />
        <remap from="camera_info" to="$(arg info_topic)" />

        <param name="camera_frame" type="str" value="$(arg camera_frame)" />
        <param name="remove_duplicates" type="bool" value="true" />
        <param name="publish_tag_detections_image" type="bool" value="false" />
        <param name="publish_tf" type="bool" value="true" />
        <param name="tag_threads" type="int" value="1" />
        <param name="tag_blur" value="0.8" />
    </node>

    <node pkg="tf" type="static_transform_publisher" name="tag_to_rotated_pos" args="0.0 0.0 0.0 -0.5 0.5 0.5 0.5 charge_dock_tag charge_dock_tag_rotated 30" />
    <node pkg="tf" type="static_transform_publisher" name="tag_to_target_pos" args="-0.15 0.0 -0.286 0 0 0 1 charge_dock_tag_rotated charge_dock_target 30" />
    <node pkg="tf" type="static_transform_publisher" name="tag_to_start_pos" args="-0.5 0.0 -0.286 0 0 0 1 charge_dock_tag_rotated charge_dock_start 30" />
</launch>
